<p id="notice"><%= notice %></p>

<h1>Galleries</h1>
<% if user_signed_in? %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td><%= gallery.title %></td>
        <td><%= link_to 'Show', gallery %></td>
        <td><%= link_to 'Edit', edit_user_gallery_path(current_user,gallery) %></td>
        <td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Gallery', new_user_gallery_path(current_user) %>

<% else %>

<h2>Please sign in first!</h2>
<% end %>

<br>

