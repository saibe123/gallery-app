<style>
.button_to,
.button_to div {
  display: inline;
  position: relative;
  left: 5px;
}
</style>
<p id="notice"><%= notice %></p>
<div style="text-align: center;">
<h1>Galleries</h1>
<% if !@user_owns_gallery %>
  <Strong>Created by: </Strong>
  <%= @user.username %>
<% end %>
</div>

<div class="row">
    <% @galleries.each do |gallery| %>
      <div class="col-sm-6">
      <div class="card">
        <div class="card-body", style="text-align: center;">
        <%= gallery.title %>
        <%= button_to 'Show', [@user, gallery], :method => :get %>
        <% if @user_owns_gallery %>
          <%= button_to 'Delete', [@user, gallery], :method => :delete, :data => { confirm: 'Are you sure?' } %>
        <% end %>
        </div>
        </div>
        </div>
    <% end %>
</div>

<% if @user_owns_gallery %>
<div style="position:relative;top:30px;left:20px">
    <%= button_to 'New Gallery', new_user_gallery_path(current_user), class: "btn btn-primary btn-lg", :method => :get %>
</div>
<% end %>
