<style>
.card-img-top {
  width: 100%;
  height: 300px;
  object-fit: cover;
}
}
</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script>

<p id="notice"><%= notice %></p>

<% Post.where(gallery_id: @gallery.id).each do |post| %>
  <div class="modal fade" id="postmodal-@(post.id)" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= image_tag(post.image)  %>
  </div>
  <% end %>


<section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light"><%= @gallery.title %></h1>
        <% if !@user_owns_gallery %>
          <p>
            <strong>Created by:</strong>
            <%= @gallery.user.username %>
          </p>
        <% end %>
      </div>
    </div>
  </section>


<div class="gallery-block cards-gallery">
  <div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-4">
  <% Post.where(gallery_id: @gallery.id).each do |post| %>
        <div class="col">
        <div class="text-center"> 
          <div class="card shadow-sm">
            <%=link_to image_tag(post.thumb, class: "card-img-top"), "#exampleModal" ,"data-toggle" => "modal" %>
          <div class="card-body">
            <p class="card-text"><%= post.title %></p>
            <% if @user_owns_gallery %>
              <%= link_to 'Delete', [@gallery, post], method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </div>
        </div>
        </div>
      </div>
      <% end %>

      <% if @user_owns_gallery %>
      <div class="col">
        <div class="text-center"> 
          <div class="card shadow-sm">
          <svg class="bd-placeholder-img card-img-top" width="100%" height="220" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Add new post</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em" >+</text></svg>
        </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  </div>



<% if @user_owns_gallery %>
  <%= link_to 'Add Post', new_gallery_post_path(@gallery) %> |
<% end %>

<%= link_to 'Back', user_galleries_path(@user) %>



<!-- Button trigger modal -->
<%= link_to "Open modal", "#exampleModal", :class => "btn", "data-toggle" => "modal" %>
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>